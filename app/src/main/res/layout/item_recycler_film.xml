<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="8dp"
    android:background="@drawable/item_border"
    android:elevation="2dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/recycler_film_poster"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:src="@drawable/poster2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recycler_film_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="5dp"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="6sp"
                android:text="Бегущий по лезвию 2049"
                android:textColor="#de000000"
                android:textSize="22sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/recycler_film_overview"
                android:layout_width="wrap_content"
                android:layout_height="62dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                android:text="Отставной детектив Рик Декард вновь восстановлен в полиции Лос-Анджелеса для поиска возглавляемой Роем Батти группы киборгов, совершившей побег из космической колонии на Землю."
                android:textColor="#8b000000"
                android:textSize="14sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_alendar" />

            <TextView
                android:id="@+id/recycler_film_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:fontFamily="sans-serif"
                android:paddingBottom="4dp"
                android:paddingLeft="2dp"
                android:paddingTop="4dp"
                android:text="1 января 2017"
                android:textColor="#8b000000"
                android:textSize="14sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/recycler_film_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_heart" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>